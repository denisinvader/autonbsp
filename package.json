{
    "name": "@dinvader/autonbsp",
    "private": false,
    "version": "1.0.3",
    "license": "MIT",
    "author": "Mikhail Panichev <denis.invader@gmail.com>",
    "repository": "github:denisinvader/autonbsp",
    "bugs": {
        "url": "https://github.com/denisinvader/autonbsp/issues"
    },
    "type": "module",
    "files": [
        "dist/**/*"
    ],
    "exports": {
        ".": "./dist/index.js",
        "./presets/*": "./dist/presets/*.js"
    },
    "scripts": {
        "build": "rm -rf dist && tsc -b --force",
        "test": "tsc -p tsconfig.test.json && node --import tsx --test **/*.test.*",
        "prepack": "npm run test && npm run build"
    },
    "devDependencies": {
        "@types/node": "^24.0.0",
        "prettier": "^3.8.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "no-break-space",
        "non-breaking-space",
        "nbsp",
        "typography",
        "russian-text",
        "text-utils",
        "text-formatting"
    ]
}
